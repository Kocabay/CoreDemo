@using CoreDemo.Areas.Admin.Models

@{
    ViewData["Title"] = "AssingRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model [i].RoleID" />
            <input type="hidden" asp-for="@Model [i].Name" />
            <input type="checkbox" asp-for="@Model [i].Exists" class="form-check-input" />
            <label class="form-check-label" for="@Model [i].Exists"> @Model [i].Name</label>
        </div>
    }
    <button class="btn btn-info">Degişiklikleri Kaydet</button>
</form>
<a href="/Admin/AdminRol/UserRoleList" class="btn btn-primary">Kullanıcı Listesine Dön</a>

