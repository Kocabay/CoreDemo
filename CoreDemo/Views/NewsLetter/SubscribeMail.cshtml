<div class="tech-btm">

    <p>Teknoloji, yazılım bloglarını mail alın.</p>
    <form action="/NewsLetter/SubscribeMail/" method="post">
        <input type="email" placeholder="Email" id="txtmail" class="tech-btm" required="" name="Mail">
        <input type="submit" id="btn" value="Abone Ol">
    </form>

</div>
<script type="text/javascript">
    $("#btn").click(function{
        let values = {
            Mail: $("#txtmail").val()
        };
        $.ajax({
            type: "POST",
            url: "/NewsLetter/SubscribeMail/",
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
            }
        });
    });
</script>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>