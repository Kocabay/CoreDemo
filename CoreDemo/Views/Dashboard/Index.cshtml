<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Bloglar</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık  </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="@item.BlogImage" class="mr-2" alt="image"> 
                                        </td>
                                        <td>
                                            @item.BlogTitle

                                        </td>
                                        <td>
                                            <label class="badge badge-gradient-success">@item.Category</label>
                                        </td>
                                        <td> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy")) </td>
                                        <td>
                                            <a href="/Blog/BlogReadAll/@item.BlogID" class="btn btn-dark"></a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3">Veriler Yok.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
